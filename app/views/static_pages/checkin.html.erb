	<%= form_for(:upload, url: uploads_path) do |f| %>
		<%= f.label :bus_name, "Bus Name" %>
    <%= f.text_field :bus_name %>

    <%= f.label :file, "Please select the trip roster file to upload:" %>
		<%= f.file_field :file %>

