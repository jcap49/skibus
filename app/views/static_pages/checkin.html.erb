	<% end %>

	<% if false #form_for("#") do |f| %>
		<%= f.label :guest_name, "Please begin typing guest name (first or last name):" %>
		<%= f.text_field :guest_name %>

		<%= f.submit "Check in guest", class: "button" %>

	<% end %>
